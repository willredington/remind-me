generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Profile {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String   @unique
  userName  String

  locations   Location[]
  frequencies Frequency[]

  globalConstraints      GlobalConstraint[]
  recurringTaskTemplates RecurringTaskTemplate[]
  tasks                  Task[]
  RecurringTaskInstance  RecurringTaskInstance[]
}

model CoordinatePoint {
  id                 String   @id @default(uuid())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  latitude           Float
  longitude          Float
  latitudeDirection  String
  longitudeDirection String

  locations Location[]
}

model Location {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isPreferred Boolean  @default(false)
  type        String
  address     String
  name        String
  description String?

  coordinatePointId String
  coordinatePoint   CoordinatePoint @relation(fields: [coordinatePointId], references: [id])

  ownerId String
  owner   Profile @relation(fields: [ownerId], references: [id])

  recurringTaskTemplates RecurringTaskTemplate[]
  tasks                  Task[]
  RecurringTaskInstance  RecurringTaskInstance[]
}

model Frequency {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  unit      String
  value     Int
  days      String[] // FIXME: will come back to this
  endDate   DateTime?

  ownerId String
  owner   Profile @relation(fields: [ownerId], references: [id])

  recurringTaskTemplates RecurringTaskTemplate[]
}

model GlobalConstraint {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  type        String
  name        String
  description String?
  details     Json?

  ownerId String
  owner   Profile @relation(fields: [ownerId], references: [id])
}

model RecurringTaskTemplate {
  id                String   @id @default(uuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  name              String
  description       String?
  priority          String?
  durationInMinutes Int

  ownerId String
  owner   Profile @relation(fields: [ownerId], references: [id])

  locationId String
  location   Location @relation(fields: [locationId], references: [id])

  frequencyId String
  frequency   Frequency @relation(fields: [frequencyId], references: [id])

  instances RecurringTaskInstance[]
}

model RecurringTaskInstance {
  id              String    @id @default(uuid())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  lastCompletedAt DateTime?
  name            String
  description     String?
  startDate       DateTime
  endDate         DateTime

  ownerId String
  owner   Profile @relation(fields: [ownerId], references: [id])

  locationId String
  location   Location @relation(fields: [locationId], references: [id])

  templateId String
  template   RecurringTaskTemplate @relation(fields: [templateId], references: [id])
}

model Task {
  id              String    @id @default(uuid())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  lastCompletedAt DateTime?
  name            String
  description     String?
  startDate       DateTime
  endDate         DateTime

  ownerId String
  owner   Profile @relation(fields: [ownerId], references: [id])

  locationId String
  location   Location @relation(fields: [locationId], references: [id])
}
